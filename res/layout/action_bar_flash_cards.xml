<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal">   
    
    <ImageView 
        android:id="@+id/ic_launcher"
        android:layout_width="@dimen/ic_action_bar"
    	android:layout_height="@dimen/ic_action_bar"
        android:layout_marginLeft="10dp"
    	android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_launcher"
        />
    <Button 
        android:id="@+id/flashCardBtn"
        android:layout_toLeftOf="@+id/backBtn"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/ic_action_bar_flash_card_width"
    	android:layout_height="@dimen/ic_action_bar_flash_card_height"
        android:layout_marginRight="10dp"
    	android:background="@drawable/empty_flash_card_front"
        />
    <Button 
        android:id="@+id/backBtn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/ic_action_bar"
    	android:layout_height="@dimen/ic_action_bar"
        android:layout_marginRight="10dp"
    	android:background="@drawable/ic_action_btn_back"
        />

</RelativeLayout>
